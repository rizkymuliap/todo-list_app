<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit Todo-list</h2>
            <form method="post" action="/edit">
              <input type="hidden" class="form-control" id="old" name="old" required value="<%= todo.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">nama </label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= todo.nama %>">
                </div>
                <div class="mb-3">
                  <label for="due_date" class="form-label">due_date </label>
                  <input type="text" class="form-control" id="due_date" name="due_date" value="<%= todo.due_date %>">
                </div>
                <div class="mb-3">
                  <label for="describe" class="form-label">describe </label>
                  <input type="text" class="form-control" id="describe" name="describe" value="<%= todo.describe %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
    </div>
  </div>