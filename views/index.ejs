
<div class="container text-center">
        <div class="row">
            <div class="col mt-3">
                <div class="display-4">
                    To-Do List
                </div>
                
                <table class="table mt-5">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Status</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Detail</th>
                        <th scope="col">Hapus</th>

                      </tr>
                    </thead>
                    <tbody>
                    <% listDataToDo.forEach((todo, i) => { %>
                        <tr>
                            <th scope="row"><%= ++i %></th>
                            <td><%= todo.nama  %></td>
                            <td>
                                <p class="btn-success badge rounded-pill"><%= todo.status %></p>
                            </td>
                            <td>
                                <a href="/edit/<%= todo.nama %>" class="btn btn-outline-danger"><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>
                                <a href="/detail/<%= todo.nama %>" class="btn btn-outline-success"><i class="bi bi-info-circle"></i></a>
                            </td>
                            <td>
                                <a href="/hapus/<%= todo.nama %>" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                    
                        
                    
                    </tbody>
                  </table>
                  <a href="/tambah/add" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Tambah</a>
            </div>
        </div>
</div>